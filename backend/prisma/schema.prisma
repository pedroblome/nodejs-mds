generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//creating a migration to user table   object <---> table in DB
model User{
  id String @id @default(uuid())
  name String
  email String
  password String
  cretedAt DateTime?  @default(now())  
  updatedAt DateTime?  @default(now())  


  @@map("users")
}